/ {
  soc {
    bus@ff600000 {
      bus@34400 {
        pinctrl@40 {
          pivccu_gpio: bank@40 {
          };
          pivccu_uart_a_pins: uart-a {
          };
        };
      };
    };

    bus@ffd00000 {
      serial@24000 {
        pinctrl-0 = <&pivccu_uart_a_pins>;
        pinctrl-names = "default";
        status = "okay";
        compatible = "pivccu,meson";
        pivccu,reset_pin = <&pivccu_gpio 81 0>;
      };

      i2c@1d000 {
        status = "okay";

        rx8130@32 {
          compatible = "epson,rx8130-legacy";
          reg = <0x32>;
          status = "okay";
          enable-external-capacitor;
        };
      };
    };
  };
};

